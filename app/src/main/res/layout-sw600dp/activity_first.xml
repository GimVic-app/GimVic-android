<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zigapk.gimvic.suplence.FirstActivity"
    android:animateLayoutChanges="true"
    android:background="@color/green">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logoView"
                android:src="@drawable/gimvic_white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/gimvic"
                android:id="@+id/title"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/logoView"
                android:layout_alignLeft="@+id/logoView"
                android:layout_alignStart="@+id/logoView"
                android:layout_marginBottom="8dp"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".35">


                </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".65">


                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/donloading"
                    android:id="@+id/downloadingData"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/firstRelativeView"
                    android:layout_alignStart="@+id/firstRelativeView" />

                <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/firstRelativeView"
                    android:gravity="center_horizontal"
                    android:animateLayoutChanges="true"
                    android:layout_marginTop="16dp"
                    android:layout_alignTop="@+id/downloadingData">

                    <ProgressBar
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstProgressBar"
                        android:layout_gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:animateLayoutChanges="true"
                        android:layout_marginTop="64dp"
                        android:id="@+id/firstLinearLayout"
                        android:visibility="gone">


                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/dijak"
                            android:id="@+id/firstDijakiButton"
                            android:layout_weight="0.95"
                            android:background="@color/green700"
                            android:textColor="@color/white"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:layout_weight="0.1"></View>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/profesor"
                            android:id="@+id/firstProfesorjiButton"
                            android:layout_weight="0.95"
                            android:background="@color/green700"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/firstChoose"
                        android:id="@+id/firstChoose"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"/>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/firstListView"
                        android:layout_marginTop="32dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstChooseItem"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"
                        android:textSize="22dp"
                        android:layout_above="@+id/firstListView"
                        android:layout_marginBottom="48dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/password"
                        android:layout_marginTop="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/inputPassword"
                        android:textColor="@color/white"
                        android:id="@+id/passwordIndicator"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

            </LinearLayout>
            </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
